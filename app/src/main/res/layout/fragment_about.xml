<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/rootCardLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="16dp"
                app:civ_border_color="@color/White"
                app:civ_border_width="1dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleDeveloper"
                    android:layout_width="161dp"
                    android:layout_height="165dp"
                    android:src="@mipmap/darth"

                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/about_developed"
                style="@style/aboutTextView"
                android:layout_marginTop="26dp"
                android:text="Developed By"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/aboutTextView"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="Sunny"
                android:textColor="#ffff"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                style="@style/aboutTextView"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="Android Developer"
                android:textColor="@color/White"
                android:textSize="20sp" />


            <View
                android:id="@+id/viewSeperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimaryDark" />


            <TextView
                style="@style/aboutTextView"
                android:layout_gravity="start"
                android:layout_margin="16dp"
                android:text="Connect with me"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/img_github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/assistant_light"
                    android:text="Fork this on Github "
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/img_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="24dp"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/assistant_light"
                    android:text="Follow me on Twiiter"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/img_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="24dp"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/assistant_light"
                    android:text="Contact Me"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</layout>